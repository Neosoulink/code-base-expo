{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"~assets/*": ["./src/assets/*"],
			"~components/*": ["./src/components/*"],
			"~fonts/*": ["./src/assets/fonts/*"],
			"~hooks/*": ["./src/hooks/*"],
			"~helpers/*": ["./src/helpers/*"],
			"~imgs/*": ["./src/assets/img/*"],
			"~router/*": ["./src/router/*"],
			"~screens/*": ["./src/screens/*"],
			"~store/*": ["./src/store/*"],
			"~styles": ["./src/assets/ts/styles.ts"]
		}
	}
}
